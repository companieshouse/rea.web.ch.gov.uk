{% extends "layouts/default.njk" %}

{% set title = "Confirm the company" %}

{% block pageTitle %}
  {% include "includes/page-title.html" %}
{% endblock %}
{% block backLink %}
  {% include "includes/back-link.html" %}
{% endblock %}

{% block main_content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">Confirm this is the correct company</h1>
      <form action="" method="post">

        {{ govukSummaryList({
          rows: [
          {
            key: {
              text: "Company name"
            },
            value: {
              text: company.companyName
            }
          },
            {
              key: {
                classes: "govuk-!-width-full",
                text: "Company number"
              },
              value: {
                text: company.companyNumber
              }
            },
            {
              key: {
                text: "Status"
              },
              value: {
                text: company.companyStatus
              }
            },
            {
              key: {
                text: "Incorporation date"
              },
              value: {
                text: company.dateOfCreation
              }
            },
            {
              key: {
                text: "Company type"
              },
              value: {
                text: company.type
              }
            }
          ]
        }) }}

        {% if notDueWarning %}
          {{ govukWarningText({
            html: notDueWarningHTML,
            iconFallbackText: "Warning"
          }) }}
        {% endif %}

        {{ govukButton({
          attributes: {
            id: "submit",
            "data-event-id": "confirm-and-continue-button"
          },
          text: "Confirm and continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
